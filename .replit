run = "python3 main.py"
entrypoint = "main.py"
modules = ["python-3.11.9"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[deployment]
run =  ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 81
externalPort = 3000

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000

[[ports]]
localPort = 6000
externalPort = 80

[agent]
expertMode = true
